<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/univeristy"
    android:padding="10dp">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="About Us"
        android:id="@+id/about"
        android:textStyle="bold"
        android:background="#ff36107f"
        android:textColor="#ffffffff"
        android:capitalize="none"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Events"
        android:id="@+id/event"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:shadowColor="#ff67207f"
        android:textSize="20dp"
        android:background="#FF9800"
        android:layout_alignTop="@+id/about"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:capitalize="none" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Curriculum"
        android:id="@+id/curriculum"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/about"
        android:layout_alignEnd="@+id/about"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:shadowColor="#ff67207f"
        android:textSize="20dp"
        android:background="#00B0FF"
        android:singleLine="true"
        android:capitalize="none" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="News"
        android:id="@+id/news"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:capitalize="none"
        android:shadowColor="#ff67207f"
        android:textSize="20dp"
        android:background="#9E9E9E"
        android:singleLine="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Sports"
        android:id="@+id/sports"
        android:layout_alignTop="@+id/contacts"
        android:layout_alignLeft="@+id/curriculum"
        android:layout_alignStart="@+id/curriculum"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:capitalize="none"
        android:shadowColor="#ff67207f"
        android:textSize="20dp"
        android:background="#E53935"
        android:singleLine="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Contacts"
        android:id="@+id/contacts"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/news"
        android:layout_alignStart="@+id/news"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:capitalize="none"
        android:shadowColor="#ff67207f"
        android:textSize="20dp"
        android:background="#0097A7"
        android:singleLine="true" />

</RelativeLayout>
